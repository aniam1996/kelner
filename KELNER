konieczam = False
while not koniec:
    while not konieczam:

        jezykNaturalny()
        suma = UstawMenu(suma)
        if proponowanie:
            suma = Propozycja(suma)
        konieczam = Upewnij()
    zachwileprzyn = odpowiedzi[7]
    print(zachwileprzyn)
    naleznosc = odpowiedzi[8].format(suma)
    print(naleznosc)
    koniec = True
Koniec()
