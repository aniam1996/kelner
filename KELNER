    for haslo in hasla:
        if haslo in napoje:
            picie = True
            n.write(haslo + '\n')
    n.close()
    jedzenie = False
    j = open('jedzenie.txt', 'w')
    danie = ['zurek', 'rosol', 'krupnik', 'bigos', 'placek', 'schabowy', 'filet', 'spaghetti', 'surowki', 'ziemniaki',
